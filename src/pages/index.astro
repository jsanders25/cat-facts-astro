---
// Import Stylesheet
import '../styles/global.css';



// data source
const source = 'https://cat-fact.herokuapp.com/facts';
// fetch the data
const res = await fetch(source); 
// store retreived data
const data = await res.json();

let count = 0;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">

		<title>Retreive and and display external API data with Astro</title>
	</head>
	<body>
		
		<header class="masthead">
			<h1 class="site-title">Cat Facts</h1>
		</header>

		<main id="content" class="main-area">

			<ul class="cards">
		  
				<!-- Your API Data -->
				{
					
					data.map((fact) => (
					<li class="card-item">
						<a href="#">
							<figure class="card">
								<img src="https://placehold.co/350x350?text=yeah" alt="Placeholder">
								<figcaption class="caption">
									<h3 class="caption-title">Fact {++count}</h3>
									<p>{fact.text}</p>
								</figcaption>
							</figure>
						</a>
					</li>
					))
				}

		  
			</ul>
		  </main>
		  


	</body>
</html>
